@model Game_StoreWeb.Models.DTO.PlatformDTO

@{
    ViewData["Title"] = "Update Platform";
}
<link rel="stylesheet" href="~/css/gametype-style.css" />
<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="form-container animated-form">
            <h2>Update Platform</h2>
            <form asp-action="Update" id="gameForm">
                <input hidden asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 offset-4 text-center">
                    <img width="100%" id="ImageUrlPreview" />
                </div>

                <div class="text-center">
                    <input type="submit" value="Update" class="btn btn-outline-success" />
                    <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="Platform">Show all</a>
                </div>

            </form>

        </div>
    </div>

</div>