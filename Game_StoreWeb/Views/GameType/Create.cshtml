@model Game_StoreWeb.Models.DTO.GameTypeCreateDTO

@{
    ViewData["Title"] = "Create a new Game Type";
}
<link rel="stylesheet" href="~/css/gametype-style.css" />
<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="form-container animated-form">
            <h2>Create a new Game Type</h2>
            <form asp-action="Create" id="gameForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="About" class="control-label"></label>
                            <textarea asp-for="About" class="form-control"></textarea>
                            <span asp-validation-for="About" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 offset-4 text-center">
                    <img width="100%" id="ImageUrlPreview" />
                </div>

                <div class="text-center">
                    <input type="submit" value="Create" class="btn btn-outline-success" />
                    <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="GameType">Show all</a>
                </div>

            </form>

        </div>
    </div>

</div>