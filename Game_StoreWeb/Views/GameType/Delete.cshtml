@model Game_StoreWeb.Models.DTO.GameTypeDTO

@{
    ViewData["Title"] = "Delete Game Type";
}
<link rel="stylesheet" href="~/css/gametype-style.css" />
<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="form-container animated-form">
            <h2>Delete Game Type</h2>
            <form asp-action="Delete" id="gameForm">
                <input hidden asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" disabled/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="About" class="control-label"></label>
                            <textarea asp-for="About" class="form-control" disabled></textarea>
                            <span asp-validation-for="About" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 offset-4 text-center">
                    <img width="100%" id="ImageUrlPreview" />
                </div>

                <div class="text-center">
                    <input type="submit" value="Delete" class="btn btn-outline-danger" />
                    <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="GameType">Show all</a>
                </div>

            </form>

        </div>
    </div>

</div>